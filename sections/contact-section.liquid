
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .contact-block_wrapper .contact-info{display: grid;grid-template-columns: repeat(2, 1fr);text-align: left;margin-bottom:90px;} 
  .contact-block_wrapper .contact-info  .contact-heading{margin:0 0 35px;font-size:3.4rem;font-weight:500;line-height: normal;font-family: var(--font-heading-family);color: rgba(var(--color-base-solid-button-labels));}
  .contact-block_wrapper .link{text-decoration:none;display: block;}
  .contact-block_wrapper .contact-info .contact-address address{font-style: normal;}
  .contact-block_wrapper .contact-info .list-social__item .icon{display:none;}
  .contact-block_wrapper .contact-info .contact-social .list-social__link{padding:0;}
  .contact-block_wrapper .contact-info .contact-social .contact__list-social{margin:0;}
  .contact-block_wrapper .contact-info .contact-social .contact__list-social li:not(:last-child) .list-social__link:after {
    content: "-";
    display: inline-block;
    margin: 0 8px;
   }
 
  .contact-block_wrapper .contact-info div{position:relative;}
  {% if section.settings.block_image %}
   .contact-section .row{display:flex;justify-content: space-between;align-items: center;}
   .contact-section .row .image-wrapper,
   .contact-section .row .contact-section-wrapper{width:calc(50% - 60px);}
  .contact-section .row .image-wrapper img{height:650px;}
  {% endif %}  
  .contact-section .title-wrapper-with-link .title{margin-bottom:40px;}
  .contact-section .contact-block_wrapper{margin-top:36px;}
  .contact-section .opening-details p {margin: 0;}
  .contact-section .title-wrapper-with-link .description{max-width: 660px;}
  .contact-section .row .contact-section-wrapper:after{content:'';background:url('{{ section.settings.secondary_bg_image | image_url: width: 1920  }}');position:absolute;width: 541px;
    height: 528px;
    background-repeat: no-repeat;
    bottom: 0px;
    z-index: -1;
    right: 140px;}

  @media screen and (max-width: 1439px) {
     .contact-section .row .contact-section-wrapper:after{right:0;}
    .contact-section .row .image-wrapper,
   .contact-section .row .contact-section-wrapper{width:calc(50% - 30px);}
  }
   @media screen and (max-width: 989px) {
   .contact-section .row .image-wrapper,
   .contact-section .row .contact-section-wrapper{width:100%;}
   .contact-section .row{flex-direction:column;}  
   .contact-section .row .contact-section-wrapper{margin-top:40px;}
   .contact-section .row .image-wrapper img{height:100%;}   
   }
  
  @media screen and (max-width: 767px) {
    
    .contact-block_wrapper .contact-info{grid-template-columns: repeat(2, 1fr);grid-gap: 20px;}
    .contact-block_wrapper .contact-info .contact-social {left: 50%;}
    .contact-block_wrapper .title-wrapper--self-padded-mobile{padding:0;}
  }
  @media screen and (max-width: 576px) {
  .contact-block_wrapper .contact-info{grid-template-columns: repeat(1, 1fr);}
  .contact-section .row .contact-section-wrapper:after{width: 100%;height: 528px;}  
  }
   @media screen and (max-width: 400px) {
     
     .contact-block_wrapper .contact-info .contact-social {left: 0%;}
   }

  
  {%- endstyle -%}


<div class="contact-section color-{{ section.settings.color_scheme }} gradient{% if section.settings.title == blank %} no-heading{% endif %} {{ section.settings.custom_class_name }} ">
 <div class="{% if section.settings.page_full_width %} page-full-width {% else %} page-width {% endif %} {% if section.settings.page_full_width_spacing %} page-full-width_spacing {% endif %}section-{{ section.id }}-padding isolate">
 <div class="row"> 
   {% if section.settings.block_image %}
   <div class="image-wrapper">
     <img
                      srcset="{%- if section.settings.block_image.width >= 375 -%}{{ section.settings.block_image | image_url: width: 375 }} 375w,{%- endif -%}
                      {%- if section.settings.block_image.width >= 550 -%}{{ section.settings.block_image | image_url: width: 550 }} 550w,{%- endif -%}
                      {%- if section.settings.block_image.width >= 750 -%}{{ section.settings.block_image | image_url: width: 750 }} 750w,{%- endif -%}
                      {%- if section.settings.block_image.width >= 1100 -%}{{ section.settings.block_image | image_url: width: 1100 }} 1100w,{%- endif -%}
                      {%- if section.settings.block_image.width >= 1500 -%}{{ section.settings.block_image | image_url: width: 1500 }} 1500w,{%- endif -%}
                      {%- if section.settings.block_image.width >= 1780 -%}{{ section.settings.block_image | image_url: width: 1780 }} 1780w,{%- endif -%}
                      {%- if section.settings.block_image.width >= 2000 -%}{{ section.settings.block_image | image_url: width: 2000 }} 2000w,{%- endif -%}
                      {%- if section.settings.block_image.width >= 3000 -%}{{ section.settings.block_image | image_url: width: 3000 }} 3000w,{%- endif -%}
                      {%- if section.settings.block_image.width >= 3840 -%}{{ section.settings.block_image | image_url: width: 3840 }} 3840w,{%- endif -%}
                      {{ section.settings.block_image | image_url }} {{ section.settings.block_image.width }}w"
                      sizes="100vw"
                      src="{{ section.settings.block_image | image_url: width: 1500 }}"
                      loading="lazy"
                      class="dt-sc-hotspot-image"
                      alt="{{ section.settings.block_image.alt | escape }}"
                      width="{{ section.settings.block_image.width }}"
                      height="{{ section.settings.block_image.height }}"
                    >  
   </div>
     {% endif %}
  <div class="contact-section-wrapper">
     {%- unless section.settings.title == blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin content-align--{{ section.settings.column_alignment }}">
         {%- if section.settings.sub_heading != blank -%}  
         <h6 class="sub-heading">{{ section.settings.sub_heading | escape }}</h6>
         {%- endif -%} 
         {%- if section.settings.title != blank -%}  
          <h2 class="title {{ section.settings.heading_size }}">
            {{ section.settings.title | escape }}
          </h2>
          {%- endif -%} 
          {%- if section.settings.description != blank -%}  
          <p class="description">{{ section.settings.description }}</p>
          {%- endif -%}   
          {%- if section.settings.button_label != blank -%}
            <a {% if section.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link }}"{% endif %} class="button{% if section.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}">{{ section.settings.button_label | escape }}</a>
          {%- endif -%}
          </div>
    {%- endunless -%}
      <div class="contact-block_wrapper">
        <div class="contact-info list-unstyled">
            
           {% if section.settings.contact_opening_details  %}
             <div class="opening-details">
              <h6 class="contact-heading">{{ section.settings.contact_opening_details }}</h6>
               <p>{{ section.settings.contact_detail_1 }}</p>
               <p>{{ section.settings.contact_detail_2 }}</p>
             </div>
            {% endif %}
           {% if section.settings.contact_phone_no != blank %}
                <div class="contact-phone">
                 <h6 class="contact-heading">{{ section.settings.contact-heading_phone }}</h6>
                 <a href="mailto:{{ section.settings.contact_email }}" class="link">   
                  {{ section.settings.contact_email }}  
                </a>   
                 <a href="tel:{{ section.settings.contact_phone_no }}" class="link">   
                  {{ section.settings.contact_phone_no }}  
                </a>   
                
                </div>
             {% endif %}
            {% if section.settings.contact_address != blank %}
                <div class="contact-address"> 
                  <h6 class="contact-heading">{{ section.settings.contact-heading_address }}</h6>
                  <address>{{ section.settings.contact_address }}</address>
                </div>
            {% endif %}  
             {% if section.settings.show_social_icons != blank %}
                <div class="contact-social">
                 <h6 class="contact-heading">{{ section.settings.contact-heading_social }}</h6>
                   {%- if section.settings.show_social_icons -%}
                <ul class="contact__list-social list-unstyled list-social" role="list">
                   {% render 'social-icons' %}
                </ul>
                {%- endif -%}
                </div>
             {% endif %}
             
        </div>  
        {%- if section.settings.contact_button_label != blank -%}
            <a {% if section.settings.contact_button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.contact_button_link }}"{% endif %} class="button button--primary">{{ section.settings.contact_button_label | escape }}</a>
          {%- endif -%}
     </div>
  </div>
 </div>
</div>
</div>

